<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tabletopgenerator</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tabletopgenerator.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="sidebar" id="sidebar">
        <h2>🧙 TabletopGen</h2>
        <a asp-controller="Home" asp-action="Index" class="nav-link">
            <span class="icon-placeholder"></span>
            <span class="link-text">Dashboard</span>
        </a>
        <a href="#" class="nav-link">
            <span class="icon-placeholder"></span>
            <span class="link-text">Name Generator</span>
        </a>
        <a href="#" class="nav-link">
            <span class="icon-placeholder"></span>
            <span class="link-text">Quest Generator</span>
        </a>
        <a href="#" class="nav-link">
            <span class="icon-placeholder"></span>
            <span class="link-text">Map Tools</span>
        </a>
        <a href="#" class="nav-link">
            <span class="icon-placeholder"></span>
            <span class="link-text">Settings</span>
        </a>


    </div>
    <div class="main" id="main">
        <div class="header">
            <button class="toggle-button" onclick="toggleSidebar()">☰</button>
            <div class="auth-buttons">
                <button class="upgrade-button">Upgrade</button>
                <button class="login-button">Login</button>
            </div>
        </div>
       </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script>
                function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('collapsed');

            const toggleButton = document.querySelector('.toggle-button');
            toggleButton.style.left = sidebar.classList.contains('collapsed') ? '60px' : '220px';
        }

        </script>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Tabletopgenerator - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
